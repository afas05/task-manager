generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Task {
  id      Int      @id @default(autoincrement())
  title   String
  order   Int      @default(0)
  created DateTime @default(now())
  deleted Boolean  @default(false)
}

model SubTasks {
  id      Int      @id @default(autoincrement())
  task_id Int
  title   String
  order   Int      @default(0)
  created DateTime @default(now())
  done    Boolean  @default(false)
  deleted Boolean  @default(false)
}
