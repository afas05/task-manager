generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Task {
  id      Int      @id @default(autoincrement())
  title   String
  user_id Int      @default(1)
  order   Int      @default(0)
  created DateTime @default(now())
  deleted Boolean  @default(false)
}

model SubTasks {
  id      Int      @id @default(autoincrement())
  task_id Int
  title   String
  order   Int      @default(0)
  created DateTime @default(now())
  done    Boolean  @default(false)
  deleted Boolean  @default(false)
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  created  DateTime @default(now())
  deleted  Boolean  @default(false)
}
